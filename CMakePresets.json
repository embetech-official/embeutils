{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "include": [],
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default",
            "description": "Default build configuration",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "installDir": "${sourceDir}/release",
            "cacheVariables": {
                "CONFIG_EMBEUTILS_EXTRA_CHECKS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "testing",
            "configurePreset": "default",
            "targets": [
                "embeutils_ut"
            ]
        },
        {
            "name": "release",
            "configurePreset": "default",
            "targets": [
                "install"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "testing",
            "configurePreset": "default",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ]
}